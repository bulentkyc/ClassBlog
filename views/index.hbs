{{> header}}

<link rel="stylesheet" href="css/index.css"> 

<main>
    
    <!-- input form -->
    <div class="container">
        <row>
            <h1 class="text-center">Enter your contact</h1>
            <form class="col-xs-12 col-md-6 mx-auto" action="/newContact" method="POST" enctype="multipart/form-data">
                        <div class="input-group mb-1">
                            <div class="input-group-prepend">
                                <div class="input-group-text">...</div>
                            </div>
                            <input type="text" class="form-control" name="name" placeholder="Enter your contact's name">
                        </div>

                        <div class="input-group mb-1">
                            <div class="input-group-prepend">
                                <div class="input-group-text">@</div>
                            </div>
                            <input type="email" class="form-control" name="email" placeholder="Enter your contact's e-mail">
                        </div>

                        <div class="input-group  mb-1">
                            <label class="custom-file-label" for="avatar">Choose file</label>
                            <input type="file" class="custom-file-input" id="avatar" name="avatar" multiple="multiple">
                        </div>

                        <div class="input-group">
                            <button type="submit" class="btn btn-primary btn-block">Submit</button>
                        </div>
                    </form>
        </row>
        <!-- unordered list (ul) -->
        <div class="container row">
            <ul class="col-xs-12 col-md-6 mx-auto ul">
                {{#each contactList}}
                <li class="li row">
                    <div class="float-left col-11">
                        <a href="/profile/{{this._id}}">
                            <img src="/uploads/{{this.avatar}}">
                            {{this.name}} 
                            <div class="float-right">
                                {{this.mail}}
                            </div>
                        </a>
                    </div>
                    <div class="float-right col-1">
                        <a class="far fa-trash-alt" href="/delete-contact/{{this._id}}"></a>
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
</main>


<div id="footer" >
{{> footer}}
</div>
</div>